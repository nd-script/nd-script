// المثال الأول: تعريف الدوال مع الفاصلة العربية
// Example 1: Function Definitions with Arabic Comma
// ================================================

دالة تهيئة_كون_متقدم(حجم، جاذبية، انتظام): {
    // تهيئة كون بمعاملات مخصصة
    // Initialize universe with custom parameters
    تهيئة حجم=حجم
    ضبط جاذبية=جاذبية
    ضبط عدم_انتظام=انتظام
}

function setup_advanced_universe(size, gravity, irregularity): {
    // English function with standard commas
    init size=size
    set gravity=gravity
    set irregularity=irregularity
}

// المثال الثاني: دوال بمعاملات متعددة
// Example 2: Functions with Multiple Parameters
// ============================================

دالة محاكاة_شاملة(حجم، جاذبية، انتظام، خطوات، سرعة): {
    // دالة بخمسة معاملات مع فواصل عربية
    // Function with five parameters using Arabic commas
    تهيئة حجم=حجم
    ضبط جاذبية=جاذبية
    ضبط عدم_انتظام=انتظام
    تطور خطوات
    عرض إحصائيات
}

// المثال الثالث: الماكروز مع الفاصلة العربية
// Example 3: Macros with Arabic Comma
// ===================================

ماكرو تجربة_مقارنة(حجم_أول، حجم_ثاني): {
    // ماكرو لمقارنة أحجام مختلفة
    // Macro for comparing different sizes
    
    // التجربة الأولى
    تهيئة_كون_متقدم(حجم_أول، 0.5، 0.1)
    تطور 50
    حفظ "تجربة_أولى.nds"
    
    // التجربة الثانية
    تهيئة_كون_متقدم(حجم_ثاني، 0.5، 0.1)
    تطور 50
    حفظ "تجربة_ثانية.nds"
}

macro comparison_experiment(size_one, size_two): {
    // English macro with standard commas
    setup_advanced_universe(size_one, 0.5, 0.1)
    evolve 50
    save "experiment_one.nds"
    
    setup_advanced_universe(size_two, 0.5, 0.1)
    evolve 50
    save "experiment_two.nds"
}

// المثال الرابع: الفواصل المختلطة (عربي/إنجليزي)
// Example 4: Mixed Commas (Arabic/English)
// ========================================

function mixed_comma_function(arabic_param، english_param, another_param): {
    // دالة تستخدم فواصل مختلطة (مدعومة)
    // Function using mixed commas (supported)
    init size=100
    set gravity=0.7
}

دالة دالة_فواصل_مختلطة(معامل_عربي, معامل_إنجليزي، معامل_آخر): {
    // دالة عربية بفواصل مختلطة
    // Arabic function with mixed commas
    تهيئة حجم=200
    ضبط جاذبية=0.3
}

// المثال الخامس: استدعاء الدوال مع الفاصلة العربية
// Example 5: Function Calls with Arabic Comma
// ===========================================

// استدعاء الدوال العربية
// Calling Arabic functions
تهيئة_كون_متقدم(150، 0.6، 0.2)
محاكاة_شاملة(200، 0.8، 0.1، 100، 1.0)

// استدعاء الماكروز
// Calling macros
تجربة_مقارنة(100، 300)

// استدعاء الدوال الإنجليزية
// Calling English functions
setup_advanced_universe(250, 0.7, 0.15)
comparison_experiment(150, 400)

// المثال السادس: دوال متداخلة ومعقدة
// Example 6: Nested and Complex Functions
// =======================================

دالة تحليل_متقدم_للبيانات(مصدر_البيانات، نوع_التحليل، مستوى_التفصيل، خيارات_العرض): {
    // دالة معقدة لتحليل البيانات
    // Complex function for data analysis
    
    تحميل مصدر_البيانات
    
    // تحليل حسب النوع
    إذا (نوع_التحليل == "كثافة"): {
        عرض كثافة
    } وإلا_إذا (نوع_التحليل == "طاقة"): {
        عرض طاقة
    } وإلا: {
        عرض حالة
    }
    
    // عرض مفصل حسب المستوى
    إذا (مستوى_التفصيل > 5): {
        عرض إحصائيات
        عرض تحليل
    }
}

function advanced_data_analysis(data_source, analysis_type, detail_level, display_options): {
    // English equivalent with standard commas
    load data_source
    
    if (analysis_type == "density"): {
        show density
    } elif (analysis_type == "energy"): {
        show energy
    } else: {
        show state
    }
    
    if (detail_level > 5): {
        show stats
        show analysis
    }
}

